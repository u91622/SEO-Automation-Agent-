        {
            "parameters": {
                "jsCode": "// Aggregate all text blocks into a single string for AI analysis\nconst blocks = $input.all();\nlet fullText = \"\";\n\nfor (const block of blocks) {\n  const type = block.json.type;\n  if (block.json[type] && block.json[type].rich_text) {\n    const textObj = block.json[type].rich_text;\n    if (Array.isArray(textObj)) {\n      fullText += textObj.map(t => t.plain_text).join(\"\") + \"\\n\";\n    }\n  }\n}\n\n// Robust ID Retrieval\nlet pageId;\nif ($node[\"Notion Trigger\"] && $node[\"Notion Trigger\"].json.id) {\n  pageId = $node[\"Notion Trigger\"].json.id;\n} else if (blocks.length > 0 && blocks[0].json.parent) {\n    if (blocks[0].json.parent.type === 'page_id') {\n        pageId = blocks[0].json.parent.page_id;\n    } else {\n        pageId = $node[\"Notion Trigger\"].json.id;\n    }\n}\n\n// Robust Title Retrieval: Dynamically find the property of type 'title'\nlet title = \"Untitled\";\nconst properties = $node[\"Notion Trigger\"].json.properties;\n\nif (properties) {\n  // Look for any property that has 'title' type\n  const titleKey = Object.keys(properties).find(key => properties[key].type === 'title');\n  if (titleKey && properties[titleKey].title && properties[titleKey].title.length > 0) {\n    title = properties[titleKey].title[0].plain_text;\n  }\n}\n\nreturn {\n  json: {\n    pageId,\n    fullText,\n    title\n  }\n};"
            },
